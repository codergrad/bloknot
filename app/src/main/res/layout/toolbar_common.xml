<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="?attr/colorPrimary"
        />

    <TextView
        android:id="@+id/trash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="14dp"
        android:textSize="24sp"
        android:text="Корзина"

        />

    <Button
        android:id="@+id/BtnRestore"

        android:layout_width="50dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="10dp"
        android:gravity="center"
        style="?android:attr/borderlessButtonStyle"

        android:drawableTop="@drawable/ic_restore_btn"

        android:layout_toEndOf="@+id/trash"

        />

    <Button
        android:id="@+id/btnDeletefinally"

        android:layout_width="50dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="10dp"
        android:gravity="center"
        style="?android:attr/borderlessButtonStyle"

        android:drawableTop="@drawable/ic_delete_btn"

        android:layout_toEndOf="@+id/BtnRestore"

        />

    <Button
        android:id="@+id/btnSearch"

        android:layout_width="50dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="10dp"
        android:gravity="center"
        style="?android:attr/borderlessButtonStyle"

        android:drawableTop="@drawable/ic_search_btn"

        android:layout_toEndOf="@+id/btnDeletefinally"

        />

    <Button
        android:id="@+id/btnSettings"

        android:layout_width="50dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="10dp"
        android:gravity="center"
        style="?android:attr/borderlessButtonStyle"

        android:drawableTop="@drawable/ic_settings_btn"

        android:layout_alignEnd="@id/toolbar"
        />

    <!-- здесь начинаются кнопки для longClick -->

    <Button
        android:id="@+id/BtnMarkAll"

        android:layout_width="50dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="30dp"
        android:gravity="center"
        style="?android:attr/borderlessButtonStyle"

        android:drawableTop="@drawable/ic_markall_btn"

        />

    <Button
        android:id="@+id/btnFixNote"

        android:layout_width="50dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="30dp"
        android:gravity="center"
        style="?android:attr/borderlessButtonStyle"

        android:drawableTop="@drawable/ic_fixnote_btn"

        android:layout_toEndOf="@+id/BtnMarkAll"
        />

    <Button
        android:id="@+id/btnDelete"

        android:layout_width="50dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="30dp"
        android:gravity="center"
        style="?android:attr/borderlessButtonStyle"

        android:drawableTop="@drawable/ic_delete_btn"

        android:layout_toEndOf="@+id/btnFixNote"
        />

</RelativeLayout>